---
import { ClientRouter } from "astro:transitions";

import Header from "./Header.astro";
// import Footer from "@components/Footer.astro";
import "../styles/global.css";
import BtnWhatsApp from "./BtnWhatsApp.astro";

type HeaderVariant = "light" | "dark";

interface Props {
  headerVariant?: HeaderVariant;
}

const { headerVariant = "light" }: Props = Astro.props;
---

<html lang={"es"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Clínica Materno Fetal - Hospital Angeles</title>

    <!-- Seo metadata -->
    <meta
      name="description"
      content="Clínica de Medicina Materno Fetal en México certificada por la Joint Commission International (JCI)"
    />
    <meta
      name="keywords"
      content="medicina materno fetal, clínica materno fetal, hospital angeles, jci, certificación jci, salud materna, cuidado prenatal, diagnóstico prenatal, tratamiento fetal, atención obstétrica, salud perinatal"
    />
    <meta name="author" content="YGU COMUNICAXION" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  </head>
  <body class="flex flex-col min-h-screen">
    <Header variant={headerVariant} />
    <main class="flex-1 bg-white">
      <slot />
    </main>
    <!-- <Footer  /> -->
    <BtnWhatsApp />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
