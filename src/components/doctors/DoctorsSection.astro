---
import DoctorsGallery from "@components/doctors/DoctorsGallery.astro";

interface DoctorsSectionProps {
  title: string;
  description: string;
}

const { title, description } = Astro.props as DoctorsSectionProps;
---

<section class="bg-white py-16 lg:py-24">
  <div class="container mx-auto max-w-7xl space-y-12 lg:space-y-16">
    <div class="mx-auto max-w-3xl space-y-4 text-center">
      <h2 class="text-3xl font-bold text-primary-blue-800 md:text-4xl">
        {title}
      </h2>
      <p class="text-base font-light text-primary-grey-800 md:text-lg lg:text-xl">
        {description}
      </p>
    </div>

    <DoctorsGallery />
  </div>
</section>
