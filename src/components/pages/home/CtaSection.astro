---
interface Props {
  message?: string;
  buttonLabel?: string;
  backgroundClass?: string;
}

const {
  message =
    "Con nuestros estudios prenatales y médicos certificados, tu salud y la de tu bebé están en las mejores manos.",
  buttonLabel = "Agenda tu estudio",
  backgroundClass = "",
} = Astro.props satisfies Props;
---

<section
  class={`relative w-full py-16 md:py-20 ${backgroundClass}`.trim()}
  aria-label="Llamado a la acción principal"
>
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-3xl text-center text-primary-blue-800">
      <p class="text-xl md:text-2xl font-light leading-relaxed text-pretty">
        {message}
      </p>

      <button
        type="button"
        class="mt-8 inline-flex items-center justify-center rounded-full border border-primary-blue-800 px-8 py-3 text-sm font-light text-primary-blue-800 transition hover:bg-primary-blue-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-blue-200"
      >
        {buttonLabel}
      </button>
    </div>
  </div>
</section>
